#!/usr/bin/python2.7
import requests
import time
from hosted import device, node, config

counter = 0
device.gpio.monitor(config.pin)
for (pin, state) in device.gpio.poll_forever():
    if state is True:
        counter += 1
        r = requests.get(config.url + "true " + str(counter))
    else:
        r = requests.get(config.url + "false")
